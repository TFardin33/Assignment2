<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grocery List Organizer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        />

    <!-- Checkboxes for selecting grocery items -->
    <CheckBox
        android:id="@+id/check_fruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fruits"
        />

    <CheckBox
        android:id="@+id/check_vegetables"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vegetables"
        />

    <CheckBox
        android:id="@+id/check_dairy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dairy"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Category:"
        android:paddingTop="16dp"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/radio_group_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_organic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organic" />

        <RadioButton
            android:id="@+id/radio_non_organic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non-organic" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Freshness:"
        android:paddingTop="16dp"
        android:textSize="18sp" />

    <RatingBar
        android:id="@+id/rating_bar_freshness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="0" />

    <TextView
        android:id="@+id/quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Quantity:"
        android:paddingTop="16dp"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seek_bar_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/quantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: 0"
        android:paddingTop="8dp" />

    <Switch
        android:id="@+id/switch_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include Discounts/Bulk Purchases"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        />

</LinearLayout>